- if can?(:index, Page)
  = forge_menu_item item, forge_pages_path, :active => is_active("pages"), :submenu => can?(:create, Page)
  - if can?(:create, Page)
    %ul.forge_submenu{ :class => is_active(["pages"]) ? "#{item} active" : item }
      = link_to "New Page", new_forge_page_path, :class => ("active" if is_active(["pages"]) && params[:action] == "new")
    .spacer