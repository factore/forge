= error_messages_for :contact
= form_for @contact, :url => "/contact/submit", :id => "contact-form" do |f|
  %p
    %strong Your name:
    %br/
    = f.text_field :name, :class => "input"
  
  %p
    %strong Your email address:
    %br/
    = f.text_field :email, :class => "input"
  
  %p 
    %strong Your phone number:
    %br/
    = f.text_field :phone, :class => "input"
  
  %p
    %strong Your message:
    %br/
    = f.text_area :content, :class => "input"
  
  %p= f.submit "Submit", :class => "submit-form"