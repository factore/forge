/ CONTACT FORM
%h1= @page.title
.inside
  = raw @page.content

  = error_messages_for :contact
  = form_for @contact, :url => "/contact/submit" do |f|
    .row= f.text_field :name, :class => "input hint", :title => "Name"
    .row= f.text_field :email, :class => "input hint", :title => "Email"
    .row= f.text_field :phone, :class => "input hint", :title => "Phone"
    .row= f.text_area :content, :class => "input textarea hint", :title => "Message..."
    .row= f.submit "Send", :class => "submit button red right"
    .spacer